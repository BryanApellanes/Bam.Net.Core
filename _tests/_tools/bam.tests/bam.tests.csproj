<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <OutputPath>\opt\bam\build\debug\bam.tests\</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <OutputPath>\opt\bam\build\release\bam.tests\</OutputPath>
    </PropertyGroup>

    <ItemGroup>
      <Compile Remove="UnitTests\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="UnitTests\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="UnitTests\**" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="bam.net.core" Version="1.0.*" />
    </ItemGroup>

</Project>
